@model CartViewModel
<div class="col-sm-2 col-xs-12">&nbsp;</div>
<div class="text-center col-sm-8 col-xs-12">
    <form asp-controller="Brand" asp-action="SelectBrand" method="post">
        <div class="col-sm-4 col-xs-12">&nbsp;</div>
        <div class="col-sm-4 col-xs-12" style="padding-bottom:5%;">
            <span style="font-size:medium;">Brands</span>
            <select asp-for="BrandId" asp-items="@Model.GetBrands()"
                    class="form-group form-control" onchange="this.form.submit();">
                <option selected style="display:none;">Select Brand</option>
            </select>
        </div>
        <div class="col-sm-4 col-xs-12">&nbsp;</div>
    </form>
    @if (Context.Session.GetObject<ProductViewModel[]>("order") != null && Model.BrandId > 0)
    {
        <div class="col-xs-12" style="font-size:x-large;">
            <span> Catalogue </span>
        </div>
        ProductViewModel[] order = Context.Session.GetObject<ProductViewModel[]>("order");
        @foreach (ProductViewModel item in order)
        {
            if (item.BrandId == Model.BrandId)
            {
                item.JsonData = JsonConvert.SerializeObject(item);
                var id = "menuitem" + item.Id;
                var descr = "descr" + item.Id;
                <div id="item" class="col-sm-3 col-xs-12 text-center" style="border:solid;">
                    <span class="col-xs-12"><img src="~/img/burger.jpg" /></span>
                    <p id="@descr" data-description="@item.Description">
                        <span style="font-size:large;">@item.Description.Substring(0, 10)...</span>
                    </p>
                    <div>
                        <span>For Nutrional Info.<br />Click Details</span>
                    </div>
                    <div style="padding-bottom: 10px;">
                        <a href="#details_popup" data-toggle="modal" class="btn btn-default" id="modalbtn" data-id="@item.Id">Details</a>
                    </div>
                    <input type="hidden" id="@id" value="@item.JsonData" />
                </div>
            }
        }
    }
</div>

<div class="modal" id="details_popup">
    <div class="modal-dialog">
        <div class="modal-content col-xs-12">
            <div class="modal-body">
                <a href="" style="font-size:xx-large" data-dismiss="modal" class="pull-right">X</a>
                <div class="text-center"> <!-- Could Possibly Remove this-->
                </div>
                <form asp-controller="Brand" asp-action="SelectItem" method="post" role="form">
                    <div class="text-center col-sm-offset-2">
                        <table>
                            <tr><td class="col-xs-8 text-right"><img class="img-responsive" alt="" id="detailsGraphic" /><br /></td><td class="col-xs-4 text-left" id="description"></td></tr>
                            <tr><td class="col-xs-8 text-right">Console:</td><td class="col-xs-4 text-left" id="brand"></td></tr>
                            <tr><td class="col-xs-8 text-right">Price: $</td><td class="col-xs-4 text-left" id="price"></td></tr>
                            <tr>
                                <td class="col-xs-6 text-right">Qty:</td>
                                <td class="col-xs-4 text-left">
                                    <input asp-for="Qty" type="number" maxlength="3" size="3" style="width: 50px;" id="qty" />
                                    <input asp-for="Id" type="hidden" id="detailsId" />
                                </td>
                            </tr>
                            <tr><td colspan="2">&nbsp;</td></tr>
                        </table>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-sm btn-default" id="modalbtn">Add To Tray</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div id="results" class="text-center">
                    @ViewBag.AddMessage
                </div>
            </div>
        </div><!--modal-content-->
    </div><!--modal-dialog-->
</div><!--modal-->